#!/bin/bash

clear

printf "Welcome to your address book!\n\n"

prompt="Please select from the following options:
		(a) Find a record
		(b) Add a new record
		(c) Update a record
		(d) Remove a record
		(e) Diplay records
		(h) Help
		(x) Quit
		>:"
while true; do

	read -p "${prompt}" input
	case "${input}" in

		a|A) ./findrecord;;
		b|B) ./addrecord;;
		c|C) ./updaterecord;;
		d|D) ./deleterecord;;
		e|E) ./displayrecords;;
#		h|H) ./help;;
		x|X) echo "Quitting..."; sleep 1s; exit 0;;
		*) echo "Incorrect input."; sleep 1s; clear;
	esac
done 
